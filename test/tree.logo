function treeColor(length) {
	return 2.5 * (100 - length);
}

angle = 50;

function tree(length) {
  if (length < 10) return;
  setpw(length / 9);
  setpc('rgb(255,' + round(treeColor(length)) + ',0)');
  fd(length);
  lt(angle / 2);
  tree(length * 0.65);
	rt(angle);
	tree(length * 0.85);
	lt(angle / 2);
	pu();
	bk(length);
	pd();
}

clear('black');
pu();
setxy(-94, -160);
rt(5);
pd();
tree(85);
